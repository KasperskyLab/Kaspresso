<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kaspersky.kaspresso_allure_support_sample">

    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.kaspersky.kaspresso_sample_core.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.simple.SimpleActivity"
            android:label="@string/simple_fragment_title" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.measure.MeasureActivity"
            android:label="@string/simple_fragment_title" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.web.WebViewActivity"
            android:label="@string/main_screen_webview_button"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.flaky.CommonFlakyActivity"
            android:label="@string/main_screen_scroll_view_sample_button" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.continuously.ContinuouslySampleActivity"
            android:label="@string/main_screen_continuously_sample_button" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.docloc.FragmentTestActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.device.DeviceSampleActivity"
            android:label="@string/device_sample_title" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.upgrade.UpgradeTestActivity"
            android:label="@string/upgrade_title" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.compose.ComplexComposeSampleActivity"
            android:label="@string/main_screen_complex_compose_sample_button" />

        <activity
            android:name="com.kaspersky.kaspresso_sample_core.idlingwait.WaitForIdleActivity"
            android:label="@string/main_screen_idlewaiting_sample_button" />

        <service
            android:name="com.kaspersky.kaspresso_sample_core.device.DeviceSampleAccessibilityService"
            android:label="@string/device_sample_accessibility_service_title"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
    </application>

</manifest>
